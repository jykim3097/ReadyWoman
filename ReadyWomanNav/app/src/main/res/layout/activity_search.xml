<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/sCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="담당센터"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_toRightOf="@id/sCenter"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/sCertiStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자격증 여부"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spinner2"
                android:layout_toRightOf="@id/sCertiStatus"
                android:layout_marginLeft="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/scName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강좌명"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/scName"
                android:layout_marginLeft="70dp"
                android:textSize="18dp"
                android:hint="         강좌명을 입력하세요   "
                android:background="@android:color/transparent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/sCStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강좌상태"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spinner3"
                android:layout_toRightOf="@id/sCStatus"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="검색"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>