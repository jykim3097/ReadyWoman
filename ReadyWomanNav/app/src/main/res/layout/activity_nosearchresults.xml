<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/nosearchresults_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/ic_nosearchresults"
        android:contentDescription="@string/nosearchresults"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/nosearchresults_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/nosearchresults"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#a839a8"
        android:layout_gravity="center"/>

</LinearLayout>